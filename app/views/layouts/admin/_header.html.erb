  <div class="flex justify-between gap-x-4 items-center">
    <%= link_to t("profile_menu.english"), locale: :en %>
    <%= link_to t("profile_menu.vietnamese"), locale: :vi %>
    <span class="inline-block px-2">  |  </span>
    <%= button_to t("header.sign_out"), destroy_account_session_path, method: :delete, data: { "turbo-method": :delete }  %>
  </div>
</header>
