<%= form_with(model: [@book, comment], local: false, html: {id: dom_id(comment, :form)}) do |form| %>
  <%= form.hidden_field :book_id, value: @book.id %>
  <%= form.text_area :comment_text, id: "comment_input", placeholder: t("book_details.write_review"), class: "flex !bg-background min-h-[80px] w-full rounded-md border-none border-input px-3 py-2 text-sm  placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2  disabled:cursor-not-allowed disabled:opacity-50" %>
  <%= form.submit t("comment"), class: "bg-primary text-primary-foreground font-semibold py-1 px-2 mt-2 rounded-lg" %>
<% end %>
