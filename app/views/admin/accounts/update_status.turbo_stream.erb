<%= turbo_stream.update dom_id(@account, :btn) do %>
    <% if @account.ban? %>
        <%= button_to t("user.banned.activate"),
            update_status_admin_account_path(@account), method: :post, data: {turbo_stream: true}, class: "mr-2 p-3 py-1 mt-2 bg-transparent hover:bg-green-700 text-green-700 font-semibold hover:text-white border border-green-700 hover:border-transparent rounded-md font-medium" %>
    <% else %>
        <%= button_to t("user.overdue.ban"),
            update_status_admin_account_path(@account), method: :post, data: {turbo_stream: true}, class: "mr-2 p-3 py-1 mt-2 bg-transparent hover:bg-red-700 text-red-700 font-semibold hover:text-white border border-red-700 hover:border-transparent rounded-md font-medium" %>
    <% end %>
<% end %>
